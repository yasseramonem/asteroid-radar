<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="icon_dim">
        <item name="android:layout_width">@dimen/big</item>
        <item name="android:layout_height">@dimen/big</item>
    </style>

    <style name="main_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sub_text" parent="main_text">
        <item name="android:layout_marginTop">@dimen/tiny</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/subtitleSize</item>
    </style>

    <style name="detail_text_marginHigh" parent="main_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/standard</item>
    </style>

    <style name="detail_text_marginLow" parent="sub_text">
        <item name="android:layout_width">match_parent</item>
    </style>


</resources>
